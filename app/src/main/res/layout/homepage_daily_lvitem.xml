<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/homepage_dalit_img"
        android:layout_width="60dp"
        android:layout_height="59dp"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/homepage_tv_theme"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:text="Calorie"
        app:layout_constraintStart_toEndOf="@+id/homepage_dalit_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homepage_tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:text="500"
        app:layout_constraintStart_toEndOf="@+id/homepage_tv_theme"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homepage_daily_cal"
        android:layout_width="32dp"
        android:layout_height="18dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:text="KJ"
        app:layout_constraintStart_toEndOf="@+id/homepage_tv_num"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>