<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.loginActivity.QuestionnaireActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="283dp"
        android:layout_height="69dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="customization"
        android:textColor="@color/mainColor"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/quesStartButton"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:text="Start Now"
        android:background="@color/mainColor"
        android:textColor="#FFFBFB"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/quesSkipButton"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@color/mainColor"
        android:textColor="#FFFBFB"
        android:textSize="20dp"
        android:text="Skip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesStartButton" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="260dp"
        android:layout_height="104dp"
        android:layout_marginTop="50dp"

        android:textSize="20dp"
        android:text="For better customization, we will ask you a few questions, which may take about five minutes."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>